@model Gallery.Models.GalleryViewModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gallery</title>
    <style>
        .custom-container {
            margin-left: 10%;
            margin-right: 0%;
        }

        body {
            overflow-x: hidden !important;
        }

        .image {
            opacity: 1;
            display: block;
            transition: .5s ease;
            backface-visibility: hidden;
            float: left !important;
            width: 300px !important;
            height: 300px !important;
            object-fit: cover !important;
        }

        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            text-align: center;
        }

        .card:hover .image {
            opacity: 0.3;
        }

        .card:hover .middle {
            opacity: 1;
        }
    </style>
</head>
<div class="custom-container">
    <h3>Gallery</h3>
    @foreach (var blob in Model.images)
    {
        <div class="row mt-4">
            <div class="card mb-4 mr-4">
                <img class="card-img-top image" src="@blob.Path" alt="@blob.ImageName">
                <div class="middle">
                    <a href="@blob.Path" class="btn btn-primary" download>Download</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
